<% provide(:title, t("title.login")) %>
<h1><%= t "title.login" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>

      <%= f.label :email, t("user.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t("user.pass") %>
      <%= link_to t("messenger.forgot"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t "check.remember" %></span>
      <% end %>

      <%= f.submit t("button.submit"), class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to t("button.singup"), signup_path %></p>
  </div>
</div>
