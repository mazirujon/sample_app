<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("header"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("title.home"), root_path %></li>
        <li><%= link_to t("title.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("title.user"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("user.pro"), current_user %></li>
              <li><%= link_to t("user.set"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("button.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("button.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
